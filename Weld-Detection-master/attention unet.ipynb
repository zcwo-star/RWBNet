        "import glob\n",
        "import cv2\n",
        "import numpy as np\n",
        "import os\n",
        "from random import shuffle\n",
        "import tensorflow as tf\n",
        "from tensorflow.keras import layers, Model\n",
        "import matplotlib.pyplot as plt\n",
        "from PIL import Image\n",
        "import pandas as pd\n",
        "from skimage.transform import resize\n",
        "from sklearn.model_selection import train_test_split\n",
        "from sklearn.metrics import classification_report, accuracy_score\n",
        "import imutils\n",
        "\n",
        "def attention_gate(x, g, filters):\n",
        "    x1 = layers.Conv2D(filters, 1, padding='same')(x)\n",
        "    g1 = layers.Conv2D(filters, 1, padding='same')(g)\n",
        "    out = layers.Add()([x1, g1])\n",
        "    out = layers.Activation('relu')(out)\n",
        "    out = layers.Conv2D(1, 1, padding='same')(out)\n",
        "    out = layers.Activation('sigmoid')(out)\n",
        "    return layers.Multiply()([x, out])\n",
        "\n",
        "def attention_unet(input_shape=(256, 256, 3)):\n",
        "    inputs = layers.Input(input_shape)\n",
        "    \n",
        "    c1 = layers.Conv2D(64, 3, activation='relu', padding='same')(inputs)\n",
        "    c1 = layers.Conv2D(64, 3, activation='relu', padding='same')(c1)\n",
        "    p1 = layers.MaxPooling2D((2, 2))(c1)\n",
        "    \n",
        "    c2 = layers.Conv2D(128, 3, activation='relu', padding='same')(p1)\n",
        "    c2 = layers.Conv2D(128, 3, activation='relu', padding='same')(c2)\n",
        "    p2 = layers.MaxPooling2D((2, 2))(c2)\n",
        "    \n",
        "    c3 = layers.Conv2D(256, 3, activation='relu', padding='same')(p2)\n",
        "    c3 = layers.Conv2D(256, 3, activation='relu', padding='same')(c3)\n",
        "    p3 = layers.MaxPooling2D((2, 2))(c3)\n",
        "    \n",
        "    c4 = layers.Conv2D(512, 3, activation='relu', padding='same')(p3)\n",
        "    c4 = layers.Conv2D(512, 3, activation='relu', padding='same')(c4)\n",
        "    p4 = layers.MaxPooling2D((2, 2))(c4)\n",
        "    \n",
        "    c5 = layers.Conv2D(1024, 3, activation='relu', padding='same')(p4)\n",
        "    c5 = layers.Conv2D(1024, 3, activation='relu', padding='same')(c5)\n",
        "    \n",
        "    u4 = layers.UpSampling2D((2, 2))(c5)\n",
        "    a4 = attention_gate(c4, u4, 512)\n",
        "    u4 = layers.concatenate([a4, u4])\n",
        "    c6 = layers.Conv2D(512, 3, activation='relu', padding='same')(u4)\n",
        "    c6 = layers.Conv2D(512, 3, activation='relu', padding='same')(c6)\n",
        "    \n",
        "    u3 = layers.UpSampling2D((2, 2))(c6)\n",
        "    a3 = attention_gate(c3, u3, 256)\n",
        "    u3 = layers.concatenate([a3, u3])\n",
        "    c7 = layers.Conv2D(256, 3, activation='relu', padding='same')(u3)\n",
        "    c7 = layers.Conv2D(256, 3, activation='relu', padding='same')(c7)\n",
        "    \n",
        "    u2 = layers.UpSampling2D((2, 2))(c7)\n",
        "    a2 = attention_gate(c2, u2, 128)\n",
        "    u2 = layers.concatenate([a2, u2])\n",
        "    c8 = layers.Conv2D(128, 3, activation='relu', padding='same')(u2)\n",
        "    c8 = layers.Conv2D(128, 3, activation='relu', padding='same')(c8)\n",
        "    \n",
        "    u1 = layers.UpSampling2D((2, 2))(c8)\n",
        "    a1 = attention_gate(c1, u1, 64)\n",
        "    u1 = layers.concatenate([a1, u1])\n",
        "    c9 = layers.Conv2D(64, 3, activation='relu', padding='same')(u1)\n",
        "    c9 = layers.Conv2D(64, 3, activation='relu', padding='same')(c9)\n",
        "    \n",
        "    outputs = layers.Conv2D(1, 1, activation='sigmoid')(c9)\n",
        "    return Model(inputs, outputs)"
